  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub heading"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Faq",
