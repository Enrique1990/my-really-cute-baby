    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}

 <div id="trust-badges" class="trust-badges order-summary order-summary--is-collapsed">
              <div class="trust-badges__item">
                <div class="trust-badges__header"><img src="{{ 'badge-1.png' | asset_img_url, 100x }}" /><h3>Cruelty Free</h3></div>
              </div>
              <div class="trust-badges__item">
                <div class="trust-badges__header"><img src="{{ 'badge-2.png' | asset_img_url, 100x }}" /><h3>Paraben Free</h3></div>
                <div class="trust-badges__text"></div>
              </div>
              <div class="trust-badges__item">
                <div class="trust-badges__header"><img src="{{ 'badge-3.png' | asset_img_url, 100x }}" /><h3>Hypoallergenic</h3></div>
                <div class="trust-badges__text"></div>
              </div>
              <div class="trust-badges__item">
                <div class="trust-badges__header"><img src="{{ 'badge-4.png' | asset_img_url, 100x }}" /><h3>Vegan</h3></div>
                <div class="trust-badges__text"></div>
              </div>
              <div class="trust-badges__item">
                <div class="trust-badges__header"><img src="{{ 'badge-5.png' | asset_img_url, 100x }}" /><h3>Sustainable</h3></div>
                <div class="trust-badges__text"></div>
              </div>


            </div>

          </div>
        </aside>
      </div>
    </div>

    {% if settings.checkout_customization %}
      {% render 'checkout-customization' %}
    {% endif %}

    {% if settings.enable_mystery_box %}
      {% render 'mystery-box' %}
    {% endif %}

    {{ tracking_code }}


